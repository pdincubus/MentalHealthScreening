{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist/js",
    "rootDir": "./src/site/ts",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ts/*": ["src/site/ts/*"]
    }
  },
  "include": ["src/site/ts/**/*"]
}